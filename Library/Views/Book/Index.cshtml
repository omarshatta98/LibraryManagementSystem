@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">List of Books</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">

    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Quantity)</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            <td>
                @Html.ActionLink("Assign", "Assign", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Return", "Return", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>
